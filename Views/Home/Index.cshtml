@model PaginatedList<Post>

@{
    ViewBag.Title = "Profit Lounge -  Daily Blog for everyone";
    ViewBag.BackgroundHeaderImg = $"{Context.Request.PathBase}/img/home-bg.jpg";
    ViewBag.PageHeader = "Trade like a Bank";
    ViewBag.PageSubHeader = "Fundamental, Inter-Market, Sentiment, & Technical";
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        @foreach (var post in Model)
        {
            <div class="post-preview">
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                    <h2 class="post-title">
                        @post.Title
                    </h2>
                    <h3 class="post-subtitle">
                        @post.Description
                    </h3>
                </a>
                <p class="post-meta">
                    Posted by
                    <a href="#">Admin</a>
                    on @post.DateCreated
                </p>
            </div>
            <hr>
        }
        <div class="clearfix">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Index" asp-route-page="@(Model.PageIndex-1)" class="btn btn-primary float-left"> &larr; Newer Posts</a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-action="Index" asp-route-page="@(Model.PageIndex+1)" class="btn btn-primary float-right">Older Posts &rarr;</a>
            }
        </div>
    </div>
</div>
