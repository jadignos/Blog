@model IEnumerable<Blog.Models.Post>

@{
    ViewBag.Title = "Admin Panel";
    ViewBag.BackgroundHeaderImg = "";
    ViewBag.PageHeader = "Admin Panel";
    ViewBag.PageSubHeader = "";
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <a asp-controller="Admin" asp-action="Upsert" class="btn btn-primary btn-sm float-right m-3">Add New</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Title</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" asp-controller="Admin" asp-action="Upsert" asp-route-id="@post.Id">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Remove" asp-route-id="@post.Id">X</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
