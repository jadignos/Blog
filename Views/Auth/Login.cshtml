@model LoginViewModel

@{
    ViewBag.Title = "Sign In";
    ViewBag.BackgroundHeaderImg = $"{Context.Request.PathBase}/img/signin-bg.jpg";
    ViewBag.PageHeader = "Sign In";
    ViewBag.PageSubHeader = "Enter your credentials";
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div asp-validation-summary="All" class="post-preview text-danger"></div>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                </div>
            </div>
            <br />
            <div class="form-group form-check-inline controls">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <br />
            <button type="submit" class="btn btn-primary float-left">Sign-In</button>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary float-right">Register</a>
        </form>
    </div>
</div>